<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.bsnes-mercury-performance"
		name="Nintendo - SNES / SFC (bsnes-mercury Performance)"
		version="0.94.0.27"
		provider-name="Near, Alcaro">
